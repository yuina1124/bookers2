<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= textarea :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Opinion" %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
          
        </div>
        <% end %>
        <p><% link_to "Show", @book %></p>
        <p><% link_to "Back",</p>
      </div>
    </div>
  </div>
</main>

<%= render 'layouts/footer'>