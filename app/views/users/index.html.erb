<%= render 'users/userinfo', user: @user %>

<h2>New book</h2>
      <%= form_with model: @book_new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %><br>

        <%= f.submit 'Create Book' %>
      <% end %>

<h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to user_path(user.id) do %>
          Show
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<%= render 'layouts/footer' %>